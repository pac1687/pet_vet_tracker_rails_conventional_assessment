<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="page-header">
        <h1><%= current_user.name %>'s Pets</h1>
      </div>
      <ul>
        <% @pets.each do |pet| %>
          <li><h3><%= link_to "#{pet.name}", pet_path(pet) %></h3></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <div class="page-header">
        <h1>Upcoming Appointments</h1>
      </div>
      <ol>
      <% @upcoming_appointments.each do |appointment| %>
        <li>
          <%= appointment.pet.name %>
          <div class="container">
            <ul>
              <li><%= appointment.date.strftime("%A, %B %e, %Y at %l:%M %p") %></li>
              <li>Veterinarian: <%= appointment.veterinarian.name %></li>
              <li>Description: <%= appointment.description %></li>
              <li>Note: <%= appointment.note %></li>
              <li>Cost: $<%= '%.2f' % appointment.cost %></li>
            </ul>
          </div>
        </li>
      <% end %>
    </ol>
    </div>
  </div>
</div>

<div class="page-header">
  <h2>New Pet</h2>
</div>

<div class="container">
  <%= render('form') %>
</div>

<br>
