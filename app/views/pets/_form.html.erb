<%= render("layouts/errors", :object => @pet) %>

<%= form_for(@pet) do |f| %>
  <div class="align-rt">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="align-rt">
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div class="align-rt">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>
  <div class="align-rt">
    <%= f.label :kind %>
    <%= f.text_field :kind %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>